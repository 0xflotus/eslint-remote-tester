{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@config": ["lib/config"],
            "@config/*": ["lib/config/*"],
            "@engine": ["lib/engine"],
            "@engine/*": ["lib/engine/*"],
            "@file-client": ["lib/file-client"],
            "@progress-logger": ["lib/progress-logger"]
        }
    },
    "include": ["lib", "test"]
}
