{
    "name": "eslint-remote-tester",
    "version": "0.2.1",
    "author": "Ari Perkkio <ari.perkkio@gmail.com>",
    "description": "Tool for running ESLint on multiple repositories",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "bin": "dist/index.js",
    "engines": {
        "node": ">=12.11"
    },
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc --project tsconfig.prod.json",
        "watch": "tsc --watch --project tsconfig.prod.json",
        "start": "nodemon --watch dist dist/index.js",
        "start:ci": "CI=true yarn start",
        "start:memory-limit-crash": "NODE_OPTIONS=--max_old_space_size=10 node dist",
        "test": "jest",
        "test:integration": "jest --config jest.config.integration.js",
        "lint:react": "node dist --config eslint-remote-tester.react.config.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AriPerkkio/eslint-remote-tester"
    },
    "homepage": "https://github.com/AriPerkkio/eslint-remote-tester",
    "bugs": "https://github.com/AriPerkkio/eslint-remote-tester",
    "dependencies": {
        "chalk": "^4.1.0",
        "simple-git": "^2.20.1"
    },
    "devDependencies": {
        "@types/eslint": "^7.2.2",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.10.1",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.4.2",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.1",
        "typescript": "^4.0.2"
    },
    "peerDependencies": {
        "eslint": ">=7"
    },
    "keywords": [
        "eslint",
        "eslint-test"
    ]
}
